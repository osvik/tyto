/***
  LAYOUT SPECIFIC STYLES

  Used for defining positional relationships.

***/
.tyto-content
  & > div
    position fixed
    top      56px
    right    0
    bottom   0
    left     0
    // Required for IE EDGE
    z-index  2
    @media(min-width 852px)
      top    64px

.tyto-header
  position fixed
  top      0
  left     0
  right    0

.tyto-content
  overflow visible

.tyto-header
  z-index 1
